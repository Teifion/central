<%
  light = (assigns[:current_user] != nil and Central.Config.get_user_config_cache(@current_user.id, "general.Light mode") == true)
%>

<style type="text/css">
  .icon-test {
    margin: 4px 6px;
  }
</style>

<%= if light do %>
  <style type="text/css">
    .theme-bg {
      background-color: rgb(233, 236, 239);
    }
  </style>
<% else %>
  <style type="text/css">
    .theme-bg {
      background-color: rgb(34, 34, 34);
    }
  </style>
<% end %>

<script type="text/javascript" charset="utf-8">
  $(function() {
    var selected_tab = window.location.hash.substr(1).replace("_tab", "");
    $('#the_tabs a:first').tab('show');
    $('#the_tabs [href="#' + selected_tab + '_tab"]').tab('show');

    // They'll get hidden by the main theme but this will re-show them
    setTimeout(function() {
      $("#flash-messages").show();
    }, 4200);

    do_icons();
  });

  function do_icons() {
    var icon_list = $("#icons-area").val().split("\n");
    var output = "";

    for (var i = 0; i < icon_list.length; i++) {
      var icon = icon_list[i];

      output += "<i class='icon-test fa-3x fa-fw fa-thin fa-" + icon + "'></i>";
      output += "<i class='icon-test fa-3x fa-fw fa-light fa-" + icon + "'></i>";
      output += "<i class='icon-test fa-3x fa-fw fa-regular fa-" + icon + "'></i>";
      output += "<i class='icon-test fa-3x fa-fw fa-solid fa-" + icon + "'></i>";
      output += "<i class='icon-test fa-3x fa-fw fa-duotone fa-" + icon + "'></i>";
      output += "<i class='icon-test fa-3x fa-fw fa-brand fa-" + icon + "'></i>";

      output += "<br />";
    }

    $("#icon-output").html(output);
  }

  function do_view_colour() {
    var colour_list = $("#colours-area").val().split("\n");
    var output = "";

    for (var i = 0; i < colour_list.length; i++) {
      var colour = colour_list[i];

      output += "<div style='width: 600px; height: 30px; display: inline-block; background-color: " + colour + ";'>&nbsp;</div><br />";

      output += "<br />";
    }

    $("#colour-output").html(output);
  }
</script>

