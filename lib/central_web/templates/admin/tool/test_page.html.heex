<style type="text/css">
  .icon-test {
    margin: 4px 6px;
  }
</style>

<script type="text/javascript" charset="utf-8">
  $(function() {
    var selected_tab = window.location.hash.substr(1).replace("_tab", "");
    $('#the_tabs a:first').tab('show');
    $('#the_tabs [href="#' + selected_tab + '_tab"]').tab('show');

    // They'll get hidden by the main theme but this will re-show them
    setTimeout(function() {
      $("#flash-messages").show();
    }, 4200);

    do_icons();
  });

  function do_icons() {
    var icon_list = $("#icons-area").val().split("\n");
    var output = "";

    for (var i = 0; i < icon_list.length; i++) {
      var icon = icon_list[i];

      output += "<i class='icon-test fa-3x fa-fw far fa-" + icon + "'></i>";
      output += "<i class='icon-test fa-3x fa-fw fas fa-" + icon + "'></i>";
      output += "<i class='icon-test fa-3x fa-fw fal fa-" + icon + "'></i>";
      output += "<i class='icon-test fa-3x fa-fw fab fa-" + icon + "'></i>";
      output += "<i class='icon-test fa-3x fa-fw fad fa-" + icon + "'></i>";

      output += "<br />";
    }

    $("#icon-output").html(output);
  }

  function do_view_colours() {
    var colour_list = $("#colours-area").val().split("\n");
    var output = "";

    for (var i = 0; i < colour_list.length; i++) {
      var colour = colour_list[i];

      output += "<div style='width: 600px; height: 30px; display: inline-block; background-color: " + colour + ";'>&nbsp;</div><br />";

      output += "<br />";
    }

    $("#colour-output").html(output);
  }
</script>

<%
  colours = ~w(secondary primary primary2 info info2 success success2 warning warning2 danger danger2)
%>

<%= render CentralWeb.Admin.ToolView, "sub_menu.html", Map.merge(assigns, %{active: "test_page"}) %>


<div class="row">
  <div class="col-xl-6 col-lg-12">
    <div class={"card"}>
      <div class="card-body">

<ul class="nav nav-tabs" role="tablist" id="the_tabs">
  <li class="nav-item" role="presentation">
    <a href="#icons_tab" role="tab" class="nav-link active" data-bs-toggle="tab">Icons</a>
  </li>
  <li class="nav-item" role="presentation">
    <a href="#colours_tab" role="tab" class="nav-link" data-bs-toggle="tab">Colours</a>
  </li>
  <li class="nav-item" role="presentation">
    <a href="#cards_tab" role="tab" class="nav-link" data-bs-toggle="tab">Cards</a>
  </li>
  <li class="nav-item" role="presentation">
    <a href="#tables_tab" role="tab" class="nav-link" data-bs-toggle="tab">Tables</a>
  </li>
  <li class="nav-item" role="presentation">
    <a href="#buttons_tab" role="tab" class="nav-link" data-bs-toggle="tab">Buttons</a>
  </li>
  <li class="nav-item" role="presentation">
    <a href="#forms_tab" role="tab" class="nav-link" data-bs-toggle="tab">Forms</a>
  </li>
  <li class="nav-item" role="presentation">
    <a href="#layouts_tab" role="tab" class="nav-link" data-bs-toggle="tab">Layouts</a>
  </li>
  <li class="nav-item" role="presentation">
    <a href="#calculations_tab" role="tab" class="nav-link" data-bs-toggle="tab">
      Calculations
    </a>
  </li>
</ul>

<div class="tab-content">
  <div class="tab-pane fade show active p-2" id="icons_tab">
    <div class="row">
      <div class="col-md-6">
        One icon per row, no <code>fa-</code> prefix. Columns on the right are <code>far, fas, fal, fab, fad</code>.
        <textarea name="icons" id="icons-area" rows="8" class="form-control" onchange="do_icons();">house</textarea>
        <br />
        <div class="btn btn-primary">Update</div>
      </div>
      <div class="col-md-6">
        <div id="icon-output">

        </div>
      </div>
    </div>
  </div>

  <div class="tab-pane fade p-2" id="colours_tab">
    <div class="row">
      <div class="col-md-6">
        One colour per row
        <textarea name="colours" id="colours-area" rows="8" class="form-control" onkeyup="do_view_colours();"></textarea>
        <br />
        <div class="btn btn-primary">Update</div>
      </div>
      <div class="col-md-6">
        <div id="colour-output">

        </div>
      </div>
    </div>
  </div>

  <div class="tab-pane fade p-2" id="cards_tab">
    <div class="row" style="background-color: #000;">
      <%= for c <- colours do %>
        <div class="col-md-3 p-2">
          <div class={"card page-card card-#{c}"}>
            <div class="card-header">
              <i class="fa fa-search fa-fw"></i>
              Title - <%= c %>
            </div>

            <div class="card-body">
              Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod
              tempor incididunt ut labore et dolore magna aliqua.
            </div>

            <div class="card-footer">
              <i class="fa fa-home fa-fw"></i>
              Footer - <%= c %>
            </div>

          </div>
        </div>
      <% end %>
    </div>
  </div>

  <div class="tab-pane fade" id="tables_tab">
    <div class="card page-card card-default">
      <div class="card-body">
        <table class="table table-hover table-striped">
          <thead>
            <tr>
              <th>Col 1</th>
              <th>Col 2</th>
              <th>Col 3</th>
              <th>Col 4</th>
              <th>Col 5</th>
            </tr>
          </thead>
          <tbody>
            <%= for c <- colours do %>
              <tr>
                <td>
                    <span class={"label label-#{c}"}>Added</span>
                  </td>
                  <td class="issue-info">
                    <a href="#">Cell text</a>
                    <br>
                    <small>Lorem ipsum in a table row</small>
                  </td>
                  <td>Some more words</td>
                  <td>Extra words</td>
                  <td class="text-right">
                    <button class="btn btn-secondary btn-sm"> Action</button>
                  </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <div class="tab-pane fade" id="buttons_tab">
    <div class="col-md-12">
      <div class="card page-card card-default">
        <div class="card-body" id="button-card">
          <div class="row">
            <div class="col-md-12 my-2">
              <div class="float-end">
                <span class="btn btn-secondary" onclick="$('#button-card').css('background-color', '#FFFFFF');">White</span>
                <span class="btn btn-secondary" onclick="$('#button-card').css('background-color', '#000000');">Black</span>
              </div>

            
              <h5>Standard</h5>
              <%= for c <- colours do %>
                <div class={"btn btn-#{c}"}><%= c |> String.capitalize %></div>
                &nbsp;&nbsp;
              <% end %>
            </div>
          </div>

          <div class="row">
            <div class="col-md-12 my-2">
              <h5>Outline</h5>
              <%= for c <- colours do %>
                <div class={"btn btn-outline-#{c}"}><%= c |> String.capitalize %></div>
                &nbsp;&nbsp;
              <% end %>
            </div>
          </div>

          <div class="row">
            <div class="col-md-12 my-2">
              <h5>Active</h5>
              <%= for c <- colours do %>
                <div class={"btn active btn-#{c}"}><%= c |> String.capitalize %></div>
                &nbsp;&nbsp;
              <% end %>
            </div>
          </div>

          <div class="row">
            <div class="col-md-12 my-2">
              <h5>Disabled</h5>
              <%= for c <- colours do %>
                <div class={"btn disabled btn-#{c}"}><%= c |> String.capitalize %></div>
                &nbsp;&nbsp;
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <style type="text/css">
    .picker-group .btn {height: 37px;}
    .picker-group text {height: 40px;}

    .picker-group .active-button {
      border-top-right-radius: 0;
      border-bottom-right-radius: 0;
    }

    .picker-group .link-button {
      border-top-left-radius: 0;
      border-bottom-left-radius: 0;
    }
  </style>

  <div class="tab-pane fade" id="forms_tab">
    <div class="col-md-12">
      <div class="card page-card card-default">
        <div class="card-body">

          <div class="input-group picker-group p-2">
            <span class="input-group-addon btn-primary btn active active-button">
              <i class="fas fa-user fa-fw"></i>
            </span>
            <input type="text" class="form-control picker-shower" value="Search terms" />
            <a class="input-group-addon btn btn-primary link-button" href="">
              <i class="fas fa-fw fa-user"></i>
              <i class="fas fa-fw fa-link"></i>
            </a>
          </div>
          
          <div class="input-group p-2">
            <input type='text' name='' id='' value='' class='form-control' />
          </div>
          <div class="input-group p-2">
            <select class="form-control">
              <option>Value 1</option>
              <option>Value 2</option>
              <option>Value 3</option>
            </select>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="tab-pane fade" id="layouts_tab">
    <div class="col-md-12">
      <div class="card page-card card-default">
        <div class="card-body">

          <a href="?layout=empty#layouts_tab" class="btn btn-outline-secondary">
            Empty
          </a>
          <a href="?layout=unauth#layouts_tab" class="btn btn-outline-secondary">
            Unauth
          </a>
          <br /><br />
          
          <a href="?layout=admin#layouts_tab" class="btn btn-outline-secondary">
            Admin
          </a>
          <a href="?layout=admin_live#layouts_tab" class="btn btn-outline-secondary">
            Admin live
          </a>
          <br /><br />
          
          <a href="?layout=nomenu#layouts_tab" class="btn btn-outline-secondary">
            No menu
          </a>
          <a href="?layout=nomenu_live#layouts_tab" class="btn btn-outline-secondary">
            No menu live
          </a>
          <br /><br />
          
        </div>
      </div>
    </div>
  </div>

  <div class="tab-pane fade" id="calculations_tab">
    <div class="col-md-12">
      <div class="card page-card card-default">
        <div class="card-body">
          <%
            now = Timex.now()
          %>
          Server time is <%= now |> Kernel.inspect %><br /><br />

          <pre>
UTC conversion is <%= date_to_str(now, format: :ymd_hms, tz: "UTC") %>
Your config conversion is <%= date_to_str(now, format: :ymd_hms, tz: @tz) %> (<%= @tz %>)

GMT conversion is <%= date_to_str(now, format: :ymd_hms, tz: "Europe/London") %>
New York conversion is <%= date_to_str(now, format: :ymd_hms, tz: "America/New_York") %>
          </pre>
        </div>
      </div>
    </div>
  </div>
</div>

<br /><br />
<a href={Routes.admin_tool_path(@conn, :index)} class="btn btn-secondary">
  <i class={"fa #{StylingHelper.icon(:back)}"}></i>&nbsp;&nbsp;Back
</a>

      </div>
    </div>
  </div>
</div>