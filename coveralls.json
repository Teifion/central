{
  "skip_files": [
    "_lib/central/*",
    "_lib/central_web/*",
    "^test/.*",
    "^/.*_web.ex",
    ".*_test_lib.ex"
  ],

  "custom_stop_words": [
    "GenServer.start_link\\(__MODULE__, \\[\\], opts\\)"
  ],

  "terminal_options": {
    "file_column_width": 40
  },

  "coverage_options": {
    "treat_no_relevant_lines_as_covered": true,
    "output_dir": "cover/",
    "minimum_coverage": 80
  }
}

